{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",  
    "rootDir": "./",     
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",        
    "src/models/**/*",      
    "controllers/**/*",
    "src/routes/**/*",     
    "src/schemas/**/*"     
, "index.ts"  ],
  "exclude": [
    "node_modules"     
  ]
}
