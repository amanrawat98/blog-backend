{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",  
    "rootDir": "./",     
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,            
    "declarationDir": "./dist/types", 
  },
  "include": [
    "src/**/*",        
    "src/models/**/*",      
    "controllers/**/*",
    "src/routes/**/*",     
    "src/schemas/**/*",
    "src/@types/**/*",
    "index.ts"  ],
  "exclude": [
    "node_modules"     
  ],
  "typeRoots": ["./src/@types", "./node_modules/@types"],

}
